<h1>Login Administrador</h1>

<form action="/login" method="POST">
  <label>Usuario:</label>
  <input type="text" name="usuario" required><br>
  <label>Clave:</label>
  <input type="password" name="clave" required><br>
  <button type="submit">Ingresar</button>
</form>

{{#if error}}
<p style="color:red;">{{error}}</p>
{{/if}}
